{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",                     
    "lib": ["es7"],                             
    "allowJs": true,                       
    "outDir": "./dist",
    "sourceMap": true,
    "rootDir": "./src",                       
    "removeComments": true,                
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],                          
    "esModuleInterop": false,                  
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,         
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "."
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
